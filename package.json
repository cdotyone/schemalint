{
  "name": "schemalint",
  "version": "0.5.1",
  "keywords": [
    "postgresql",
    "schema",
    "lint"
  ],
  "repository": "git@github.com:kristiandupont/schemalint.git",
  "license": "MIT",
  "author": {
    "name": "Kristian Dupont",
    "url": "http://www.kristiandupont.com"
  },
  "main": "build/engine.js",
  "types": "build/engine.d.ts",
  "bin": {
    "schemalint": "./bin/schemalint"
  },
  "files": [
    "build/",
    "bin/"
  ],
  "scripts": {
    "build": "tsc",
    "run-example": "node build/src/cli -c ./example/.schemalintrc",
    "start-example-db": "docker run -d --name dvd-rental -p 54321:5432 kristiandupont/dvdrental-image",
    "stop-example-db": "docker stop dvd-rental",
    "version": "yarn build"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    }
  },
  "dependencies": {
    "@kristiandupont/recase": "^1.1.1",
    "chalk": "^4.1.0",
    "extract-pg-schema": "^1.6.0",
    "irregular-plurals": "^3.2.0",
    "knex": "^0.21.5",
    "optionator": "^0.9.1",
    "pg": "^8.3.3",
    "ramda": "^0.27.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.12",
    "@types/knex": "^0.16.1",
    "@types/node": "^14.6.2",
    "@types/ramda": "^0.27.18",
    "eslint": "^7.8.1",
    "jest": "^26.4.2",
    "np": "^6.5.0",
    "prettier": "^2.1.1",
    "testcontainers": "^3.4.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "np": {
    "tests": false
  }
}
